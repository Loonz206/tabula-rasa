{
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "root": true,
  "env": {
    "node": true,
    "browser": true,
    "jasmine": true,
    "jest": true
  },
  "globals": {
    "window": true,
    "document": true
  },
  "extends": [
    "airbnb-base",
    "plugin:vue/essential",
    "eslint:recommended",
    "prettier"
  ],
  "plugins": [
    "vue", "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all"
      }
    ]
  }
}
